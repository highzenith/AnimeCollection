/*
    Organization Rules:
        Dimensions,
        Layout,
        Appearance,
        Typography
 */
@import "../Webfonts/museosans_500_macroman/stylesheet.css"
@import "reset.css"
@import "respix.styl"


/* --------------------------------- */
/* --------->>> GLOBAL <<<---------- */
/* --------------------------------- */
html
body
    width 100%
    height 100%

body
    font normal 100% "museo_sans500", sans-serif

html
    background #034

h1
    font-weight bold


/* --------------------------------- */
/* --------->>> HEADER <<<---------- */
/* --------------------------------- */
header
    position fixed
    top 0
    left 0
    right 0
    z-index 1000
    background #fff

    h1
        padding 12px
        color #222
        font-size 36px


/* --------------------------------- */
/* ---------->>> MAIN <<<----------- */
/* --------------------------------- */
section
    width 96%
    position absolute
    left 50%
    top 78px
    -webkit-transform translate(-50%, 0)
    z-index 100
    

    @media screen and (min-width: 900px)
        width 900px

    .infoBlock
        width 100%
        background #fff
        float left
        clear left

        .infoData
            float right            
            font-weight normal

    #banner
        height 250px
        background 
            rgba(0, 0, 0, 0.7),
            url(image.jpg)
        background-size cover
        border 6px solid #fff
        box-shadow 0 3px 0 #333
        margin-bottom 12px

    h2
        padding 12px
        color #fff
        text-shadow 0 1px 0 #000
        font-size 36px
        font-weight bold

    h3
        margin-top 12px
        font-size 18px
        font-weight bold

    p
        width 200px
        margin-top 6px
        float left
        clear left
        background
        text-align left
        font-size 12px
        font-weight bold